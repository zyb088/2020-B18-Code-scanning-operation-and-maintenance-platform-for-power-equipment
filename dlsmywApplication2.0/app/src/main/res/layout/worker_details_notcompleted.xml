<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ededed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title">
    </include>
    //需要移植
    <LinearLayout
        android:id="@+id/toolbar_details_notCompleted"
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器编号："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/eqid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CS10001"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器名称："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/eqname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="洗衣机"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器地点："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/eqposi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="东十九宿舍"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障上传人："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/worker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="蒋师傅"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13422772019"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障上传时间："
            android:textSize="25sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/upload_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020年12月23日"
            android:gravity="end"
            android:textSize="25sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="故障描述："
            android:textColor="#555"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_linear_text">

            <EditText
                android:id="@+id/faultdes2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:background="@null"
                android:text="洗衣机在疯狂甩头，不大行，很有问题，令人害怕"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/uploadreport"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:text="上传修复报告"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#fff"/>
</LinearLayout>