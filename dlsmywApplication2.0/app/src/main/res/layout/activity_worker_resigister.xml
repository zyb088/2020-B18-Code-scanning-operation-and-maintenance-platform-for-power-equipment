<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_work"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:background="#8FDFF3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_weight="1"
            android:background="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20sp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="500"
            android:shadowColor="#121111"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  感谢您选择使用我们的产品。现在请根据接下来的指引来创建一个新的帐号吧！"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            app:cardCornerRadius="20sp"
            app:cardElevation="10sp"
            android:layout_margin="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20sp">

                <RelativeLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_electric"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="用户名"
                    android:textColor="#42D6FA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:hint="请输入用户名"
                    android:maxLines="1"
                    android:textColorHint="#BFEAF4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="密码"
                    android:textColor="#42D6FA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/use_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:hint="请输入密码"
                    android:maxLines="1"
                    android:textColorHint="#BFEAF4"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/con_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="手机号码"
                    android:textColor="#42D6FA"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:hint="请输入手机号码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="#BFEAF4"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="25sp"
                        android:layout_marginRight="25sp"
                        android:layout_marginBottom="20sp"
                        app:cardCornerRadius="20sp"
                        app:cardElevation="10sp">

                        <Button
                            android:id="@+id/register_button"
                            android:layout_width="287dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_bg"
                            android:text="注册"
                            android:textColor="@android:color/white" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="60sp"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="期待着你的加入！"
            android:textColor="@color/buttons"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>